<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.KartuStok"
    tools:targetApi="o">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/actionbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="Tanggal" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="W.Awal" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="W.Ambil"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="W.Akhir"
                                android:textAlignment="center" />

                            <TextView

                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="S.Awal"
                                android:textAlignment="center" />

                            <TextView

                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="S.Masuk"
                                android:textAlignment="center" />

                            <TextView

                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="S.Akhir"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="F.Awal"
                                android:textAlignment="center" />

                            <TextView

                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="F.Masuk"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/borderline"
                                android:fontFamily="@font/javatext"
                                android:padding="5dp"
                                android:text="F.Akhir"
                                android:textAlignment="center" />

                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_whole_ks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_split_ks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_flake_ks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>
                    </TableLayout>

                </HorizontalScrollView>


            </ScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>